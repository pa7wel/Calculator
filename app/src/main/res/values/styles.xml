<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="KeyStyles" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">onClicked</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">#fff</item>
    </style>
    
    <style name="KeyStyles.KeySizePortrait">
        <item name="android:layout_height">80dp</item>
    </style>
    
    <style name="KeyStyles.Operations">
        <item name="android:background">@drawable/button_selector_operation</item>
    </style>

    <style name="KeyStyles.Special">
        <item name="android:background">@drawable/button_selector_special</item>
    </style>

    <style name="KeyStyles.SpecialKeySize">
        <item name="android:background">@drawable/button_selector_special</item>
        <item name="android:layout_height">80dp</item>
    </style>



    <style name="DisplayStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_above">@+id/tableLayout</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textSize">70sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/beckground_color</item>
        <item name="android:textColor">@color/text_display_color</item>
        <item name="android:paddingRight">20dp</item>
    </style>

</resources>
